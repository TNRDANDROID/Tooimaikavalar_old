<?xml version="1.0" encoding="utf-8"?>



<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding android:top="0.3dp"
                android:bottom="0.3dp"
                android:left="0.3dp"
                android:right="0.3dp"/>

            <solid android:color="@color/white" />
            <corners android:radius="40dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>

            <solid android:color="@color/grey_6" />
            <corners android:radius="40dp" />
        </shape>
    </item>


    <item>
        <shape>
            <padding android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>

            <solid android:color="@color/grey_5" />
            <corners android:radius="40dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>

            <solid android:color="@color/grey_4" />
            <corners android:radius="40dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>

            <solid android:color="@color/grey_4" />
            <corners android:radius="40dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0.2dp"
                android:bottom="0.2dp"
                android:left="0.2dp"
                android:right="0.2dp"/>

            <solid android:color="@color/grey_7" />
            <corners android:radius="40dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape >
            <gradient
                android:angle="90"
                android:endColor="@color/grey_6"
                android:startColor="@color/grey_6" />
            <corners
                android:topLeftRadius="40dp"
                android:bottomRightRadius="40dp"
                android:bottomLeftRadius="40dp"
                android:topRightRadius="40dp"/>
        </shape>
    </item>

</layer-list>

